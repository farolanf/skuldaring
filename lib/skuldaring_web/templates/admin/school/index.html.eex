<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for school <- @schools do %>
    <tr>

      <td>
        <span><%= link "Show", to: Routes.admin_school_path(@conn, :show, school) %></span>
        <span><%= link "Edit", to: Routes.admin_school_path(@conn, :edit, school) %></span>
        <span><%= link "Delete", to: Routes.admin_school_path(@conn, :delete, school), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New School", to: Routes.admin_school_path(@conn, :new) %></span>
